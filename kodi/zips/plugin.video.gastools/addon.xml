<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="plugin.video.gastools" name="GAS Tools" version="1.0.0" provider-name="ilw">
    <requires>
        <import addon="xbmc.python" version="2.26.0"/>
        <import addon="script.module.youtube.dl" version="17.709.0" optional="true"/>
        <!-- <import addon="script.gas.yul" version="1.0.0" optional="true"/> -->
    </requires>

    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="contextitem.py">
                <label>30103</label>
                <!--                <visible>Container.Content(files)+!ListItem.IsFolder|Container.Content(movies)|Container.Content(songs)|Container.Content(episodes)</visible>-->
                <visible>!ListItem.IsFolder+!Container.Content()+!Container.Content(addons)</visible>
            </item>
        </menu>
    </extension>

    <extension point="xbmc.python.script" library="script.py">
        <provides>executable</provides>
    </extension>


    <extension point="xbmc.service" library="service.py"/>

    <extension point="xbmc.python.module" library="lib"/>

    <extension point="xbmc.addon.repository" name="Kodi Repo from Goodandrewsoft">
        <info compressed="false">https://goodandrewsoft.github.io/kodi/zips/addons.xml</info>
        <checksum>https://goodandrewsoft.github.io/kodi/zips/addons.xml.md5</checksum>
        <datadir zip="true">https://goodandrewsoft.github.io/kodi/zips/</datadir>
        <hashes>true</hashes>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Tools</summary>
        <description lang="en_GB">Tools</description>
        <disclaimer lang="en_GB"></disclaimer>
        <language>en</language>
        <platform>linux windows android</platform>
        <license>GPL-2.0</license>
        <forum></forum>
        <website></website>
        <email>memm@mail.ru</email>
        <source></source>
        <news></news>
        <assets>
            <icon></icon>
            <fanart></fanart>
            <banner></banner>
            <clearlogo></clearlogo>
            <screenshot></screenshot>
        </assets>
    </extension>
</addon>