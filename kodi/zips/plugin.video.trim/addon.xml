<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.trim" name="Video Trimming" version="1.0.0" provider-name="ilw">
    <requires>
        <import addon="xbmc.python" version="2.26.0"/>
    </requires>

    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="contextitem.py">
                <label>30003</label>
                <visible>Window.IsActive(videos)+Container.Content(files)+!ListItem.IsFolder</visible>
            </item>
        </menu>
    </extension>

    <extension point="xbmc.python.script" library="utils/script.py">
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Trimming Video</summary>
        <description lang="en_GB">Trimming Video</description>
        <disclaimer lang="en_GB"></disclaimer>
        <language>en</language> <!-- the language of the videos the plugin provides, may be left blank -->
        <platform>linux windows android-armv7</platform>
        <license>GPL-2.0</license>
        <forum></forum> <!-- may be left blank  -->
        <website></website> <!-- the url of the website that contains the videos (or the official website of your plugin).  -->
        <email>memm@mail.ru</email> <!-- may be left blank  -->
        <source></source>
        <news></news>
        <assets>
            <icon></icon>
            <fanart></fanart>
            <banner></banner>
            <clearlogo></clearlogo>
            <screenshot></screenshot>
        </assets>
    </extension>
</addon>